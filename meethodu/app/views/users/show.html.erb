<p id="notice"><%= notice %></p>

<div class="mee_add_friend_box">



</div>

<table width="100%" cellspacing="1" cellpadding="5" align="center" style="margin-top: 5px; margin-bottom: 5px;">
<tr>
<td width="35%" valign="top">

<fieldset>
<legend id="mee_legend">Profile</legend>
<p>
  <b>First name:</b>
  <%= @user.first_name %>
</p>

<p>
  <b>Last name:</b>
  <%= @user.last_name %>
</p>

<p>
  <b>About me:</b>
  <%= @user.about_me %>
</p>


<p>
  <b>Gender:</b>
  <%= @user.gender %>
</p>

<p>
  <b>Address line1:</b>
  <%= @user.address_line1 %>
</p>

<p>
  <b>Address line2:</b>
  <%= @user.address_line2 %>
</p>

<p>
  <b>City:</b>
  <%= @user.city %>
</p>

<p>
  <b>State:</b>
  <%= @user.state %>
</p>

<p>
  <b>Zipcode:</b>
  <%= @user.zipcode %>
</p>

<p>
  <b>User:</b>
  <%= @user.user_id %>
</p>

<p>
  <b>Interests:</b>
  <%= @user.interests %>
</p>
</fieldset>
</td>

<td width="65%" valign="top">
<fieldset>
<legend id="mee_legend">Projects</legend>
    <% if @friend_projects.empty? %>
    <p>No Projects to display. Please add projects by links on top of this page</p>
    <% else %>
    <% @friend_projects.each do |friend_project|%>
    <p><%= link_to "Name: #{friend_project.name}", friend_project%></p>
    <p><%="Summary:  #{friend_project.summary}"%></p>
    <br></br>
    <% end %>
    <% end %>
</fieldset>
</td>
</tr>
</table>