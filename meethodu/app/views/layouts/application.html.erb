  <title>Meethodu - Help and Receive help from your friends</title>
  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag "meethodu", :media => "all" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body id="mee_body">
	<div id="mee_banner">
          <a href="<%= profile_path %> ">
		<%= image_tag("meethodu_tree_logo_small.png") %>

          </a>


	</div>
        <div id="nav_banner">

                <%if (session[:login_status] == 0) %>
                    <%= link_to 'All Projects', projects_path %>
                    <%= link_to 'Login', login_path %>

                <%elsif (session[:login_status] == 1)%>
                              <%= link_to 'Logout', logout_path %>
                              <% @login_user=User.find(session[:user_id]) %>
                              <%= link_to 'Edit Profile', edit_user_path(@login_user) %>
                              <%= link_to 'My Contributions', my_contributions_path%>
                              <%= link_to 'All Projects', projects_path %>
                              <%= link_to 'My Projects', my_projects_path%>
                              <%= link_to 'Create Project', new_project_path %>                             
                              <%= link_to 'Friends', profile_path %>
                              <%= link_to 'Home', profile_path %>
                              <a>Welcome <%= session[:first_name] %>, <%=  session[:last_name] %> ! </a>
                <%end %>

        </div>

	<div id="mee_main">
		<%= yield %>
	</div>
        <div id="mee_footer">
		<ul id="mee_footer_list_faq">
                        <li>
				<a href="doesit">Does it really work? </a>
			</li>

			<li>
				<a href="whyit">Why are you doing this? </a>
			</li>
                        <li>
				<a href="howit">How Does it work? </a>
			</li>

                </ul>
                <ul id="mee_footer_list_contacts">
			<li>
				<a href="faq">FAQ</a>
			</li>
			<li>
				<a href="/about">About Us</a>
			</li>
			<li>
				<a href="contact">Contact Us</a>
			</li>
		</ul>
        </div>
</body>
</html>
